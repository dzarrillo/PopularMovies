<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView

            android:elevation="@dimen/cardview_default_elevation"
            android:layout_margin="@dimen/cardview_default_radius"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/poster_card_view_detail">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:adjustViewBounds="true"
                android:id="@+id/movie_poster_detail"/>

            <android.support.v7.widget.AppCompatImageButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                style="@style/Widget.AppCompat.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/favourite"
                android:id="@+id/fav_image_button_detail"
                android:layout_alignRight="@id/movie_poster_detail"
                android:layout_alignBottom="@id/movie_poster_detail"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:tint="@android:color/transparent"
                android:elevation="20dp" />

        </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/title" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/release_date" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/vote_count" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/rating_text_view" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_gravity="center"
            android:id="@+id/vote_average" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
